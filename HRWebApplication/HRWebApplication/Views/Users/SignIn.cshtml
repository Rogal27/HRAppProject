@model HRWebApplication.Models.Users

@{
    ViewData["Title"] = "Sign In";
}

<div class="d-flex justify-content-center mt-4 mb-2">
    <h3>Logo</h3>
</div>
<div class="d-flex justify-content-center mb-2">
    <h4>Sign in to HR App</h4>
</div>
<div class="d-flex justify-content-center">
    <form asp-action="SignIn" class="border border-warning rounded pt-3 pb-3 pl-4 pr-4 signin-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-1">
            <label asp-for="Email">Email address:</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" id="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-1">
            <label>Password:</label>
            <input class="form-control" type="password" placeholder="Enter password" id="pwd" />
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-success p-1 w-75 signin-button">Sign In</button>
        </div>
    </form>
</div>
<div class="d-flex justify-content-center mt-3">
    You don't have an account?
</div>
<div class="d-flex justify-content-center mt-3 mb-5">
    <a class="btn btn-primary p-1 signin-signup-button" asp-area="" asp-controller="Users" asp-action="SignUp">Sign Up</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
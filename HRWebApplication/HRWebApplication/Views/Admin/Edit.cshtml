@model HRWebApplication.Models.Users

@{
    ViewData["Title"] = "Edit User";
}

<h4 class="mt-4 font-weight-bold">Edit User</h4>

<hr />
<div class="row">
    <div class="col-md-8 joboffer-style">
        @using (Html.BeginForm("Edit", "Admin", new { id = Model.UserId }, FormMethod.Post, null, new { style = "display:inline;" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group mt-2">
                <label asp-for="FirstName" class="control-label">First Name:</label>
                <div class="input-group">
                    <input asp-for="FirstName" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-user-alt"></i></span>
                    </div>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="LastName" class="control-label">Last Name:</label>
                <div class="input-group">
                    <input asp-for="LastName" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-user-alt"></i></span>
                    </div>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <dl class="mt-2">
                <dt>
                    Email:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
            <div class="form-group mt-2">
                <label asp-for="UserRoleId" class="control-label">User Role:</label>
                <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.UserRoleId"></select>
                <span asp-validation-for="UserRoleId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <a asp-controller="Admin" asp-action="GetUsers" class="btn rounded-pill btn-secondary mr-2">
                    <i class="fas fa-chevron-left pr-2"></i>
                    Cancel
                </a>
                <button type="submit" class="btn rounded-pill btn-primary">
                    <i class="fas fa-check pr-2"></i>
                    Save
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

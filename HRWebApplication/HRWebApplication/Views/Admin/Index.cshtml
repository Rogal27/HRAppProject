@{
    ViewData["Title"] = "Admin Main Page";
}

<h4 class="mt-5">ADMIN Main Page</h4>

<h5 class="mt-4 hello-text font-weight-bolder">Hello @User.Identity.Name</h5>

<div class="mt-4">
    <ul class="list-unstyled">
        <li class="py-2">
            <a class="btn btn-outline-info rounded-pill" asp-controller="Admin" asp-action="GetUsers">Users<i class="far fa-user ml-2"></i></a>
        </li>
        <li class="py-2">
            <a class="btn btn-outline-warning rounded-pill" asp-controller="Admin" asp-action="GetApplications">Applications<i class="far fa-clipboard ml-2"></i></a>
        </li>
    </ul>    
</div>

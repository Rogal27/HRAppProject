<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRWebApplication</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700&display=swap&subset=latin-ext" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark navbar-background fixed-top">
        <a class="navbar-brand ml-3 navbar-font-color" asp-area="" asp-controller="Home" asp-action="Index">HR App</a>
        <button type="button" class="navbar-toggler mr-3" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        @*<a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">HRWebApplication</a>*@
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ml-4 mr-4">
                <li class="nav-item">
                    <div class="border-top navbar-border mt-2 mb-1 d-block d-sm-none">
                        <a class="nav-link navbar-item-font-color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </div>
                    <div class="d-none d-sm-block border-bottom navbar-border-hover">
                        <a class="nav-link navbar-item-font-color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </div>
                </li>
                <li class="nav-item">
                    <div class="border-top navbar-border mt-1 mb-1 d-block d-sm-none">
                        <a class="nav-link navbar-item-font-color" asp-area="" asp-controller="JobOffers" asp-action="Index">Job Offers</a>
                    </div>
                    <div class="d-none d-sm-block border-bottom navbar-border-hover">
                        <a class="nav-link navbar-item-font-color" asp-area="" asp-controller="JobOffers" asp-action="Index">Job Offers</a>
                    </div>
                </li>
                <li class="nav-item">
                    <div class="border-top navbar-border mt-1 mb-1 d-block d-sm-none">
                        <a class="nav-link navbar-item-font-color" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                    </div>
                    <div class="d-none d-sm-block border-bottom navbar-border-hover">
                        <a class="nav-link navbar-item-font-color" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item mr-2">
                    <div class="d-none d-sm-block">
                        <a class="navbar-item-font-color pr-2 pl-2 pt-1 pb-1 navbar-signup" asp-controller="Users" asp-action="SignIn">Sign In</a>
                    </div>
                </li>
                <li class="nav-item mr-3">
                    <div class="d-none d-sm-block">
                        <a class="navbar-item-font-color pr-2 pl-2 pt-1 pb-1 border rounded navbar-signup" asp-area="" asp-controller="Users" asp-action="SignUp">Sign Up</a>
                    </div>
                </li>
                <li>
                    <div class="d-block d-sm-none border-top navbar-border mt-1 pt-2 mb-1 ml-4 mr-4 d-flex justify-content-center">
                        <a class="navbar-item-font-color pr-2 pl-2 pt-1 pb-1 mr-1 navbar-signup" asp-controller="Users" asp-action="SignIn">Sign In</a>
                        <a class="navbar-item-font-color pr-2 pl-2 pt-1 pb-1 ml-1 border rounded navbar-signup" asp-area="" asp-controller="Users" asp-action="SignUp">Sign Up</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 Michał Rogala - HRWebApplication</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

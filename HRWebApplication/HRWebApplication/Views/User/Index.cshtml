@{
    ViewData["Title"] = "User Main Page";
}

<h4 class="mt-5">User Main Page</h4>

<h5 class="mt-4 hello-text font-weight-bolder">Hello @User.Identity.Name</h5>

<h6 class="mt-3">Would like to see newest job offers?</h6>

<div class="mt-2">
    <ul class="list-unstyled">
        <li class="py-2">
            <a class="btn btn-outline-warning rounded-pill font-weight-bolder" style="font-size: 2rem" asp-controller="JobOffers" asp-action="Index">YES<i class="fas fa-exclamation ml-2"></i></a>
        </li>
        <li class="py-2">
            <a class="btn btn-outline-info rounded-pill" asp-controller="User" asp-action="GetApplications">Your Applications<i class="far fa-clipboard ml-2"></i></a>
        </li>
    </ul>
</div>